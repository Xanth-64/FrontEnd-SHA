{
  "name": "frontend_sha",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "production": "yarn build && yarn start",
    "test": "yarn test:unit & yarn test:e2e",
    "lint": "next lint & tslint -p . -c tslint.json",
    "lint_fix": "next lint --fix & tslint -p . -c tslint.json --fix",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "cypress:open": " cypress open",
    "cypress:run": " cypress run",
    "test:e2e": "start-server-and-test production http://localhost:3000 cypress:run"
  },
  "dependencies": {
    "@mantine/core": "^4.2.4",
    "@mantine/form": "^4.2.4",
    "@mantine/hooks": "^4.2.4",
    "@mantine/modals": "^4.2.4",
    "@mantine/next": "^4.2.4",
    "@mantine/rte": "^4.2.4",
    "next": "12.1.6",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "tabler-icons-react": "^1.51.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@iconify/react": "^3.2.2",
    "@svgr/webpack": "^6.2.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@types/enzyme": "^3.10.12",
    "@types/jest": "^27.5.0",
    "@types/node": "17.0.31",
    "@types/react": "18.0.9",
    "@types/react-dom": "18.0.3",
    "@types/uuid": "^8.3.4",
    "babel-jest": "^28.1.0",
    "cypress": "^9.6.0",
    "eslint": "8.15.0",
    "eslint-config-next": "12.1.6",
    "husky": "^7.0.4",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "lint-staged": "^12.4.1",
    "prettier": "2.6.2",
    "start-server-and-test": "^1.14.0",
    "ts-jest": "^28.0.1",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "tslint-react-hooks": "^2.2.2",
    "typescript": "4.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(ts|tsx)": [
      "prettier --write",
      "git add",
      "yarn test",
      "tslint"
    ]
  }
}
