{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "importOrder": [
    "lib/(.*)$",
    "types/(.*)$",
    "overlays/(.*)$",
    "templates/(.*)$",
    "organisms/(.*)$",
    "molecules/(.*)$",
    "atoms/(.*)$",
    "ions/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
